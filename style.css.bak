/* Media Queries */


/* Laptop */
@media (max-width: 1366px){
	html{
		font-size: 75%;
	}
}
/* Tablet */
@media (max-width: 768px){
	html{
		font-size: 62.5%;
	}
	
	#hamburger-menu {
		display: inline-block;
	}
	
	.navbar .navbar-nav {
		position: absolute;
		top: 100%;
		right: -100%;
		background-color: white;
		width: 30rem;
		height: 100vh;
		transition: 0.3s;
	}
	
	
	.navbar .navbar-nav.active {
		right: 0;
	}
	
	.navbar .navbar-nav a{
		color: var(--bg);
		display: block;
		margin: 1.5rem;
		padding: 0.5rem;
		font-size: 2rem;
	}
	
	.navbar .navbar-nav a::after{
		transform-origin: 0 0;
	}
	
	.navbar .navbar-nav a:hover::after{
		transform: scaleX(0.2);
	}
	
	.about .row {
	display: flex;
	justify-content: space-between;
	padding-right: 20rem;
	padding-bottom: 3rem;
	}

	.about .row .about-img1{
	padding-left: 20%;
	}

	.about .row .bio1 {
	font-size: 2rem;
	padding-left: 2rem;
	padding-top: 10rem;
	}

	.about .row .bio1 .habibbio {
	font-size: 2rem;
	text-align: left;
	}
	
	.about .row .bio1 p {
		font-size: 1rem;
		text-align: justify;
	}

	.about .row2 {
	display: flex;
	justify-content: space-between;
	padding-right: 20rem;
	padding-top: 7rem;
	}

	.about .row2 .about-img2{
	padding-left: 20%;
	}

	.about .row2 .bio2 {
	font-size: 2rem;
	padding-left: 2rem;
	padding-top: 10rem;
	}

	.about .row2 .bio2 .ainunbio {
	font-size: 2rem;
	text-align: left;
	}
	
	.about .row2 .bio2 p {
		font-size: 1rem;
		text-align: justify;
	}
}
